@model progect_DEPI.Models.Enrollment
@{
    ViewBag.Title = "Enrollment Details";
}
<div class="container mt-5">
    <h2 class="text-info mb-4"><i class="bi bi-info-circle"></i> Enrollment Details</h2>
    <div class="bg-light p-4 rounded shadow-sm">
        <p><strong>User:</strong> @Model.User?.FullName</p>
        <p><strong>Course:</strong> @Model.Course?.Title</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
        <p><strong>Enrolled At:</strong> @Model.EnrolledAt.ToString("g")</p>
        <a asp-action="List" class="btn btn-outline-secondary mt-3"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
    </div>
</div>
