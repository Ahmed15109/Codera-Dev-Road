@model IEnumerable<progect_DEPI.Models.Enrollment>

@{
    ViewBag.Title = "My Enrollments";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">
        <i class="bi bi-journal-check"></i> My Enrolled Courses
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">You haven't enrolled in any courses yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Course</th>
                        <th>Status</th>
                        @* <th>Payment</th> *@
                        <th>Enrolled At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr class="text-center">
                            <td>@e.Course?.Title</td>
                            <td><span class="badge bg-primary">@e.Status</span></td>
                            <td><span class="badge bg-info text-dark">@e.PaymentStatus</span></td>
                            <td>@e.EnrolledAt.ToString("g")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@e.EnrollmentId" class="btn btn-sm btn-outline-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
