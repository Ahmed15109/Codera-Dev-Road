@model progect_DEPI.Models.Enrollment
@{
    ViewBag.Title = "Edit Enrollment";
}
<div class="container mt-5">
    <h2 class="text-warning mb-4"><i class="bi bi-pencil-square"></i> Edit Enrollment</h2>
    <form method="post" class="shadow p-4 bg-light rounded">
        <input type="hidden" asp-for="EnrollmentId" />
        <div class="mb-3">
            <label asp-for="UserId" class="form-label">User</label>
            <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select" required>
                <option value="">-- Select User --</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Course</label>
            <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select" required>
                <option value="">-- Select Course --</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <input asp-for="Status" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="PaymentStatus" class="form-label">Payment Status</label>
            <input asp-for="PaymentStatus" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Save Changes</button>
    </form>
</div>
