@model progect_DEPI.Models.Enrollment

<h1>Edit Enrollment</h1>

<form method="post">
    <input type="hidden" asp-for="EnrollmentId" />

    <div class="mt-3">
        <label class="form-label">User</label>
        <select class="form-control" asp-for="UserId" asp-items="ViewBag.Users">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <select class="form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <input type="text" class="form-control" asp-for="Status" />
    </div>

    <div class="mt-3">
        <label class="form-label">Payment Status</label>
        <input type="text" class="form-control" asp-for="PaymentStatus" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
