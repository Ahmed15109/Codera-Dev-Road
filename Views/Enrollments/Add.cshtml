@model progect_DEPI.Models.Enrollment

<h1>Add Enrollment</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">User</label>
        <select class="form-control" asp-for="UserId" asp-items="ViewBag.Users">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <select class="form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <input type="text" class="form-control" asp-for="Status" placeholder="e.g. In Progress, Completed" />
    </div>

    <div class="mt-3">
        <label class="form-label">Payment Status</label>
        <input type="text" class="form-control" asp-for="PaymentStatus" placeholder="e.g. Paid, Pending" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Enroll</button>
    </div>
</form>
