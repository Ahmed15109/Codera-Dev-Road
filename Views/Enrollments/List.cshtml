@model IEnumerable<progect_DEPI.Models.Enrollment>

<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="bi bi-list-check"></i> All Enrollments
    </h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>User</th>
                    <th>Course</th>
                    <th>Status</th>
                    <th>Enrollment Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.User?.FullName</td>
                        <td>@e.Course?.Title</td>
                        <td>
                            <span class="badge bg-@(e.Status == "Active" ? "success" : "warning")">
                                @e.Status
                            </span>
                        </td>
                        <td>@e.EnrolledAt.ToString("d")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@e.EnrollmentId"
                               class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>