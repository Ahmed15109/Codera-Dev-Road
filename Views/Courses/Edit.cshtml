@model progect_DEPI.Models.Course

<h1>Edit Course</h1>

@if (Model is null)
{
    <p>No Courses were found</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Course Id</label>
            <input type="text" class="form-control" asp-for="CourseId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Course Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>

        <div class="mt-3">
            <label class="form-label">Created At</label>
            <input type="date" class="form-control" asp-for="CreatedAt" />
        </div>

        <div class="mt-3">
            <label class="form-label">Update At</label>
            <input type="date" class="form-control" asp-for="UpdateAt" />
        </div>

        <div class="mt-3">
            @if (User.IsInRole("Admin"))
            {
                <button type="submit" class="btn btn-primary ms-3"
                        asp-action="Edit"
                        asp-controller="Courses">
                    Edit
                </button>
                <button type="submit" class="btn btn-danger"
                        asp-action="Delete"
                        asp-controller="Courses">
                    Delete
                </button>
            }
        </div>
    </form>
}