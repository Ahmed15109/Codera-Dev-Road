@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using progect_DEPI.Models
@model progect_DEPI.Models.Course
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext dbContext

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = User.IsInRole("Admin");
    var isEnrolled = false;

    if (!isAdmin && currentUser != null)
    {
        var userId = currentUser.Id;
        isEnrolled = dbContext.Enrollments
            .Any(e => e.User.IdentityId == userId && e.CourseId == Model.CourseId);
    }
}

<div class="container mt-4">
    <!-- باقي محتوى الصفحة -->
    @if (isAdmin)
    {
        <div class="alert alert-info">
            <i class="bi bi-shield-lock"></i> Admin cannot enroll in courses.
        </div>
    }
    else if (isEnrolled)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> You are already enrolled in this course.
        </div>
    }
    else
    {
        <form asp-controller="Enrollments" asp-action="Enroll" method="post">
            <input type="hidden" name="courseId" value="@Model.CourseId" />
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-journal-plus"></i> Enroll Now
            </button>
        </form>
    }
<div class="container mt-4">
    <!-- Course Header -->
    <div class="course-header bg-light p-4 rounded-3 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold text-primary">@Model.Title</h1>
                <p class="lead text-muted">Complete the lessons in order to master the course</p>
            </div>
            <div>
                <span class="badge bg-success fs-6">Active</span>
            </div>
        </div>
    </div>

    <!-- Progress Section -->
    <div class="progress-section mb-5">
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Course Progress</span>
            <span class="fw-bold">25% Complete</span>
        </div>
        <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <!-- Lessons Grid -->
    <div class="row g-4 mb-5">
        @{
            bool canAccess = true;
            int lessonCount = 0;
        }

        @foreach (var lesson in Model.Lessons.OrderBy(l => l.OrderNumber))
        {
            lessonCount++;
            <div class="col-md-6 col-lg-4">
                <div class="card lesson-card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@lesson.Title</h5>
                                <div class="d-flex gap-2 mb-2">
                                    <span class="badge bg-light text-dark small">
                                        <i class="bi bi-list-ol me-1"></i> @lesson.OrderNumber
                                    </span>
                                    <span class="badge bg-light text-dark small">
                                        <i class="bi bi-speedometer2 me-1"></i> @lesson.Level
                                    </span>
                                </div>
                            </div>
                            @if (canAccess)
                            {
                                <a asp-controller="Lessons" asp-action="Details" asp-route-id="@lesson.LessonId"
                                   class="btn btn-sm btn-success rounded-pill px-3">
                                    <i class="bi bi-play-fill me-1"></i> Start
                                </a>
                                @* canAccess = false; *@
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary rounded-pill px-3" disabled>
                                    <i class="bi bi-lock-fill me-1"></i> Locked
                                </button>
                            }
                        </div>
                        <p class="card-text text-muted small">@(lesson.Content.Length > 100 ? lesson.Content.Substring(0, 100) + "..." : lesson.Content)</p>
                    </div>
                    @if (lessonCount == 1)
                    {
                        <div class="card-footer bg-success bg-opacity-10">
                            <small class="text-success"><i class="bi bi-info-circle"></i> Start here to begin your learning journey</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Course Management (Admin Only) -->
    @if (User.IsInRole("Admin"))
    {
        <div class="course-management border-top pt-4 mt-4">
            <h5 class="mb-3"><i class="bi bi-gear"></i> Course Management</h5>
            <div class="d-flex gap-2">
                <a asp-controller="Lessons" asp-action="Create" asp-route-courseId="@Model.CourseId"
                   class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle"></i> Add New Lesson
                </a>
                <form method="post" asp-controller="Courses" asp-action="Delete" asp-route-id="@Model.CourseId"
                      onsubmit="return confirm('Are you sure you want to delete this course and all its lessons?');">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete Course
                    </button>
                </form>
            </div>
        </div>
    }
</div>

<style>
    .course-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-left: 4px solid #0d6efd;
    }

    .lesson-card {
        transition: all 0.2s ease;
        border-radius: 10px;
        border: none;
    }

        .lesson-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .progress-section {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 10px;
    }
</style>