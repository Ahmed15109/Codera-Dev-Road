@model progect_DEPI.ViewModels.AddCourseViewModel

<div class="container mt-5">
    <h1 class="text-primary mb-4">Add Course</h1>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Course Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CreatedAt" class="form-label">Created At</label>
            <input asp-for="CreatedAt" class="form-control" type="date" />
        </div>

        <div class="mb-3">
            <label asp-for="UpdateAt" class="form-label">Updated At</label>
            <input asp-for="UpdateAt" class="form-control" type="date" />
        </div>

        <div class="mb-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Add Course</button>
    </form>
</div>
