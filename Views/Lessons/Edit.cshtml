@model progect_DEPI.ViewModels.AddLessonViewModel

<div class="container mt-4">
    <h2 class="mb-4">Edit Lesson</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="LessonId" />
        <input type="hidden" asp-for="CourseId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="OrderNumber" class="form-label"></label>
            <input asp-for="OrderNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Level" class="form-label"></label>
            <input asp-for="Level" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
