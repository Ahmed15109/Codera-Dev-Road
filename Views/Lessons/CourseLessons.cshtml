@model progect_DEPI.Models.Course

<h2>Lessons for course: @Model.Title</h2>

<a class="btn btn-success" asp-action="Create" asp-route-courseId="@Model.CourseId">Add Lesson</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Order</th>
            <th>Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model.Lessons)
        {
            <tr>
                <td>@lesson.Title</td>
                <td>@lesson.OrderNumber</td>
                <td>@lesson.Level</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@lesson.LessonId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@lesson.LessonId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
