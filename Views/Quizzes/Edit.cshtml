@model progect_DEPI.Models.Quiz

<h1>Edit Quiz</h1>

<form method="post">
    <input type="hidden" asp-for="QuizId" />

    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Time</label>
        <input type="time" class="form-control" asp-for="Time" />
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <input type="text" class="form-control" asp-for="Status" />
    </div>

    <div class="mt-3">
        <label class="form-label">Created At</label>
        <input type="datetime-local" class="form-control" asp-for="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <select class="form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
