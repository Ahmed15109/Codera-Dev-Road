@model progect_DEPI.Models.Quiz

<h1>Quiz Details</h1>

<div class="mt-3">
    <strong>Title:</strong> @Model.Title
</div>

<div class="mt-3">
    <strong>Content:</strong> @Model.Content
</div>

<div class="mt-3">
    <strong>Time:</strong> @Model.Time
</div>

<div class="mt-3">
    <strong>Status:</strong> @Model.Status
</div>

<div class="mt-3">
    <strong>Created At:</strong> @Model.CreatedAt.ToString("g")
</div>

<div class="mt-3">
    <strong>Course:</strong> @Model.Course?.Title
</div>

<a asp-action="List" class="btn btn-secondary mt-3">Back to List</a>
