
 @model IEnumerable<progect_DEPI.Models.Quiz>

<h1>All Quizzes</h1>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Add" class="btn btn-primary mb-3">+ Add New Quiz</a>
}

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Course</th>
            <th>User</th>
            <th>Status</th>
            <th>Time</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Course?.Title</td>
                <td>@quiz.User?.FullName</td>
                <td>@quiz.Status</td>
                <td>@quiz.Time</td>
                <td>@quiz.CreatedAt.ToString("g")</td>
                <td>
                    <div style="display: flex; flex-wrap: wrap; gap: 6px;">
                        <a asp-action="Details" asp-route-id="@quiz.QuizId" class="btn btn-info btn-sm">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@quiz.QuizId" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@quiz.QuizId" method="post" onsubmit="return confirm('Are you sure?')" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
