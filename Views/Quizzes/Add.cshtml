@model progect_DEPI.ViewModels.AddQuizViewModel

<h1>Add Quiz</h1>

<form method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Time</label>
        <input type="time" class="form-control" asp-for="Time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Status</label>
        <input type="text" class="form-control" asp-for="Status" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Created At</label>
        <input type="datetime-local" class="form-control" asp-for="CreatedAt" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <select class="form-control" asp-for="CourseId" asp-items="ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="mt-4 d-flex">
        <button type="submit" class="btn btn-primary me-3">Add</button>
        <a asp-action="List" asp-controller="Quizzes" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
