@model User

@{
    ViewBag.Title = "Profile";
}

<h2>@Model.FullName's Profile</h2>

<div class="card" style="width: 20rem;">
    <img class="card-img-top" src="@Model.Picture" alt="Profile Picture" />
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role?.RoleName</p>
        <p class="card-text"><strong>Joined:</strong> @Model.CreatedAt.ToShortDateString()</p>
        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
    </div>
</div>