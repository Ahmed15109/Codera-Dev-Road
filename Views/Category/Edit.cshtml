
@model progect_DEPI.Models.Category

<h1>Edit Category</h1>

@if (Model is null)
{
    <p>No Categories was found</p>
}
else
{
    <form method="post" enctype="multipart/form-data">
        @if (Model.ImageUrl != null)
        {
            <img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap">
        }
        <div class="mt-3">
            <label class="form-label">Category Id</label>
            <input type="text" class="form-control" asp-for="CategoryId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Category Name</label>
            <input type="text" class="form-control" asp-for="CategoryName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Lesson Count</label>
            <input type="number" class="form-control" asp-for="LessonsCount" />
        </div>

        <div class="mt-3">
            <label class="form-label">Update At</label>
            <input type="date" class="form-control" asp-for="UpdateAt" />
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <input asp-for="formFile" type="file" onchange="loadfile(event)">
                <img id="output" width="200px" height="200px" />
            </div>
        </div>

        <div class="mt-3">
            @if (User.IsInRole("Admin"))
            {
                <button type="submit" class="btn btn-primary ms-3"
                        asp-action="Edit"
                        asp-controller="Category">
                    Edit
                </button>
                <button type="submit" class="btn btn-danger"
                        asp-action="Delete"
                        asp-controller="Category">
                    Delete
                </button>
            }
        </div>
    </form>
}