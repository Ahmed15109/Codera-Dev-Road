@model List<progect_DEPI.Models.Category>
@{
    Layout = "_Layout2";
    var keyword = ViewBag.Keyword as string;
}

<!-- Header Start -->
<div class="container-fluid bg-dark text-white py-4">
    <div class="container text-center">
        <h1 class="display-5 fw-bold">Explore Our Tracks</h1>
        <p class="lead">Find your learning path and start your journey today.</p>
    </div>
</div>
<!-- Header End -->
<!-- Search Section -->
<div class="container py-4">
    <form asp-action="List" method="get" class="row justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="input-group shadow-sm">
                <input type="text" name="keyword" value="@keyword" class="form-control form-control-lg rounded-start" placeholder="Search for a track...">
                <button class="btn btn-primary px-4 rounded-end" type="submit">
                    <i class="fa fa-search me-1"></i> Search
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Track Section -->
<div class="container pb-5">
    <div class="text-center mb-5">
        <h6 class="text-secondary text-uppercase">Our Tracks</h6>
        <h2 class="fw-bold">Checkout New Releases Of Our Tracks</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No tracks found for "<strong>@keyword</strong>"
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="~/img/courses-1.jpg" class="card-img-top" style="height: 220px; object-fit: cover;" alt="@category.CategoryName" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center fw-bold">@category.CategoryName</h5>
                            <p class="card-text text-center text-muted">@category.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between text-muted small">
                                    <span><i class="fa fa-book me-1"></i>@category.LessonsCount Lessons</span>
                                    <span><i class="fa fa-calendar me-1"></i>@(category.UpdateAt?.ToString("yyyy-MM-dd") ?? "Not updated")</span>
                                </div>
                                <div class="text-center mt-3">
                                    <a asp-controller="Category" asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-info me-2">
                                        <i class="fa fa-eye"></i> Details
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
