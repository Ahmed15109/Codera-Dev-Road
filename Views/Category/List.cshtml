@model List<progect_DEPI.Models.Category>
@{
    Layout = "_layout2";
}
<!-- Header Start -->
<div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
    <div class="container text-center py-5">
        <h1 class="text-white display-1">Tracks</h1>
        <div class="d-inline-flex text-white mb-5">
            <p class="m-0 text-uppercase"><a class="text-white" href="/">Home</a></p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Tracks</p>
        </div>
        <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-light bg-white text-body px-4 dropdown-toggle" type="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        Tracks
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#"> Data Science </a>
                        <a class="dropdown-item" href="#">Front-End Developer</a>
                        <a class="dropdown-item" href="#"> Backend Developer </a>
                    </div>
                </div>
                <input type="text" class="form-control border-light" style="padding: 30px 25px;" placeholder="Keyword">
                <div class="input-group-append">
                    <button class="btn btn-secondary px-4 px-lg-5">Search</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Tracks Section Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Tracks</h6>
                    <h1 class="display-4">Checkout New Releases Of Our Tracks</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-6 pb-4">
                    <div class="courses-list-item position-relative d-block overflow-hidden mb-2 bg-dark">
                        <img class="ّّّّimg-fluid" src="~/img/courses-1.jpg" alt="@category.CategoryName">
                        <div class="courses-text">
                            <h4 class="text-center text-white px-3">@category.CategoryName</h4>
                            <p class="text-white text-center px-3">@category.Description</p>
                            <div class="border-top w-100 mt-3">
                                <div class="d-flex justify-content-between p-4">
                                    <span class="text-white"><i class="fa fa-book mr-2"></i>@category.LessonsCount Lessons</span>
                                    <span class="text-white">
                                        <i class="fa fa-calendar mr-2"></i>
                                        @(category.UpdateAt.HasValue ? category.UpdateAt.Value.ToShortDateString() : "Not updated")
                                    </span>
                                </div>
                            </div>
                            <div class="text-center pb-3">
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info mx-1">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary mx-1">Edit</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Tracks Section End -->
