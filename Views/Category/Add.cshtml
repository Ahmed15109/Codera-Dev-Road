@model progect_DEPI.ViewModels.AddCategoryViewModel

<h1>Add Category</h1>

<form method="post" enctype="multipart/form-data">
        <div class="mt-3">
            <label class="form-label">Category Name</label>
            <input type="text" class="form-control" asp-for="CategoryName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Lesson Count</label>
            <input type="number" class="form-control" asp-for="LessonsCount" />
        </div>

        <div class="mt-3">
            <label class="form-label">Update At</label>
            <input type="date" class="form-control" asp-for="UpdateAt"/>
        </div>
        <div class="col-12">
            <div class="form-floating mb-3">
                <input asp-for="formFile" type="file" onchange="loadfile(event)">
                <img id="output" width="200px" height="200px" />
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
</form>

@section scripts
{
    <script>
        var loadfile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output');
                output.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>