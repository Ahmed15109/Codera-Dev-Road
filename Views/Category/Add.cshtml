@model progect_DEPI.ViewModels.AddCategoryViewModel

<h1>Add Category</h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Category Name</label>
    <input type="text" class="form-control" asp-for="CategoryName" />
</div>

<div class="mt-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control" asp-for="Description"/>
</div>

<div class="mt-3">
    <label class="form-label">Lesson Count</label>
    <input type="number" class="form-control" asp-for="LessonsCount" />
</div>

<div class="mt-3">
    <label class="form-label">Update At</label>
    <input type="date" class="form-control" asp-for="UpdateAt"/>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Add</button>
</div>
</form>