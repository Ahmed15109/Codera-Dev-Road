@model progect_DEPI.Models.Certificate

<h1>Edit Certificate</h1>

<form method="post">
    <input type="hidden" asp-for="CertificateId" />

    <div class="mt-3">
        <label class="form-label">Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Created At</label>
        <input type="datetime-local" class="form-control" asp-for="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="mt-3">
        <label class="form-label">User</label>
        <select class="form-control" asp-for="UserId" asp-items="ViewBag.Users">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
