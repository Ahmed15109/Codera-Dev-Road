@model progect_DEPI.Models.Certificate
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Certificate</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background: #fff;
            color: #333;
            padding: 60px;
            border: 20px double #c2a542;
            text-align: center;
        }

        .certificate-title {
            font-size: 40px;
            font-weight: bold;
            color: #b4882a;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .certificate-subtitle {
            font-size: 22px;
            color: #555;
            margin-bottom: 40px;
        }

        .recipient-name {
            font-size: 30px;
            font-weight: bold;
            color: #222;
            margin: 20px 0;
        }

        .content {
            font-size: 20px;
            margin-bottom: 30px;
        }

        .issue-date {
            font-size: 18px;
            margin-top: 30px;
        }

        .signature {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
            padding: 0 50px;
        }

            .signature div {
                border-top: 1px solid #000;
                width: 200px;
                font-size: 14px;
                color: #555;
                padding-top: 5px;
            }

        .logo {
            width: 100px;
            position: absolute;
            top: 60px;
            left: 60px;
        }
    </style>
</head>
<body>

@*     <img src="https://i.ibb.co/GsR8VnF/gold-badge.png" class="logo" alt="Logo" />
 *@
    <div class="certificate-title">Certificate of Completion</div>
    <div class="certificate-subtitle">This certificate is proudly presented to</div>

    <div class="recipient-name">@Model.User?.FullName</div>

    <div class="content">
        For successfully completing the course: <br />
        <strong>@Model.Content</strong>
    </div>

    <div class="issue-date">
        Issued on: <strong>@Model.CreatedAt.ToString("dd MMMM yyyy")</strong>
    </div>

    <div class="signature">
        <div>Course Instructor</div>
        <div>Program Coordinator</div>
    </div>

</body>
</html>
